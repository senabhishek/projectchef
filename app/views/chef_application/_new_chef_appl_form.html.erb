<div id="NewChefAppForm" class="row-fluid">
  <div class="span12 pagination-centered">
    <h2>
      Welcome Chefs!
    </h2>
    <div class="row">
      <div class="span8">
        <h3>Apply Here!</h3>
        <%= form_for @chef_application, :url => {:action => "create"}, :html => {:multipart => true} do |f| %>
          <div class="row">
            <div class="span6">
              <%= f.text_field :first_name, :class => "span8", :autofocus => true, :placeholder => "First Name" %>
              <%= f.text_field :last_name, :class => "span8",:placeholder => "Last Name" %>
              <%= f.email_field :email,  :class => "span8",:placeholder => "Email" %>
              <%= f.text_field :city,  :class => "span8",:placeholder => "City" %>
              <%= f.phone_field :phone_number, :class => "span8",:placeholder => "Phone #: x-xxx-xxx-xxxx" %>
            </div>
            <div class="span6">
              <%= f.file_field :file_path, :class => "span6" %>
            </div>
          </div>
          <br />
          <div class="row">
            <%= f.text_area :about_me, :class => "span10", :rows => 8, :placeholder => "Tell us about yourself (1-200 words)" %>
          </div>
          <div class="row">
            <%= f.text_area :motivation, :class => "span10", :rows => 8, :placeholder => "Why do you want to apply to ProjectChef?" %><br />
          </div>
          <br /><%= f.submit "Apply!", :class => "btn btn-success" %>
        <% end %>
      </div>
      <div class="span4">
        <h3>What does ProjectChef offer you?</h3>
      </div>
    </div>
  </div>
</div>
