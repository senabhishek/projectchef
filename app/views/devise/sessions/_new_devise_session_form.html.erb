<div class="row-fluid">
  <div class="span12">
    <b>Log In with </b>
    <%= render "devise/shared/omniauth_links" %></div><br />
  </div>
</div>

<div class="row-fluid">
  <div class="span12"
    <em text-align="center">OR</em><br /><br />
  </div>
</div>

<div class="row-fluid">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div>
      <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>
    </div>

    <div><%= f.password_field :password, :placeholder => "Password" %></div>

    <div id="RemAndForgotPwd" class="row-fluid">
      <div class="span6">
        <%= f.submit "Log In" %>
      </div>
      <div class="span6">
        <%= render "devise/shared/forgot_pwd_links" %>
      </div>
    </div>
  <% end %>
</div>

